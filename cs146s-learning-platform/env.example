# CS146S Learning Platform - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED SETTINGS
# ==========================================

# Flask Secret Key - REQUIRED for session security
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration - REQUIRED
# SQLite (development): sqlite:///app.db
# PostgreSQL: postgresql://user:password@localhost/cs146s
# MySQL: mysql://user:password@localhost/cs146s
DATABASE_URL=sqlite:///app.db

# ==========================================
# OPTIONAL SETTINGS
# ==========================================

# Debug Mode (default: True in development)
DEBUG=True

# Testing Mode (default: False)
TESTING=False

# ==========================================
# AI SERVICE CONFIGURATION (Optional)
# ==========================================
# If not configured, system will use mock AI client for development/testing

# Aliyun Qwen API Key - Get from https://dashscope.aliyun.com/
QWEN_API_KEY=

# Qwen API Base URL (default: https://dashscope.aliyuncs.com/api/v1)
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# AI Model to use (default: qwen-turbo)
QWEN_MODEL=qwen-turbo

# Force mock mode even if API key is provided (for testing)
QWEN_MOCK_MODE=False

# ==========================================
# CODE EXECUTION SETTINGS
# ==========================================

# Code execution timeout in seconds (default: 30)
CODE_EXECUTION_TIMEOUT=30

# Maximum memory usage in MB (default: 100)
MAX_MEMORY_MB=100

# Maximum CPU time in seconds (default: 10)
MAX_CPU_TIME=10

# ==========================================
# SESSION SETTINGS
# ==========================================

# Session type: filesystem or redis (default: filesystem)
SESSION_TYPE=filesystem

# Session permanence (default: False)
SESSION_PERMANENT=False

# ==========================================
# DEVELOPMENT FEATURES
# ==========================================

# Enable code formatting (default: False)
CODE_FORMAT_ENABLED=False
